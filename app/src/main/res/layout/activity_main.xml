<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    tools:context="dfguerrero.com.androidassignment1.MainActivity"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="0dp"
        android:src="@drawable/imgmain"
        android:id="@+id/imageView3"
        android:scaleType="center"
        android:layout_height="280dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp" />

    <ImageButton
        android:id="@+id/random_button"
        android:layout_width="0dp"
        android:layout_height="82dp"
        app:srcCompat="@drawable/die"

        android:elevation="24dp"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:background="@drawable/die"
        android:scaleType="fitStart"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="7dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/smurfs"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="7dp" />

    <Button
        android:id="@+id/quotes"
        android:text="Quotes"

        android:layout_width="130dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:background="?android:attr/actionModeBackground"
        android:layout_height="100dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/science"
        android:layout_marginStart="2dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="2dp"
        android:fontFamily="serif"
        android:textAllCaps="false"
        android:textColor="@color/common_google_signin_btn_text_light_focused" />

    <Button
        android:id="@+id/smurfs"
        android:text="Smart Animals"

        android:layout_width="156dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:background="?android:attr/actionModeBackground"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="100dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="@+id/random_button"
        android:fontFamily="serif"
        android:textAllCaps="false"
        android:textColor="@color/common_google_signin_btn_text_light_focused" />

    <Button
        android:id="@+id/jokes"
        android:text="Jokes"

        android:layout_width="130dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:background="?android:attr/actionModeBackground"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/last"
        android:layout_marginEnd="1dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="1dp"
        android:layout_height="100dp"
        android:fontFamily="serif"
        android:textAllCaps="false"
        android:textColor="@color/common_google_signin_btn_text_light_focused" />

    <Button
        android:text="Inspiration"
        android:id="@+id/science"
        android:layout_width="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:background="?android:attr/actionModeBackground"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/quotes"
        app:layout_constraintBaseline_toBaselineOf="@+id/music"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/quotes"
        android:layout_height="100dp"
        android:fontFamily="serif"
        android:textAllCaps="false"
        android:textColor="@color/common_google_signin_btn_text_light_focused" />

    <Button
        android:text="Music"
        android:id="@+id/music"
        android:layout_width="156dp"
        app:layout_constraintRight_toRightOf="@+id/smurfs"
        app:layout_constraintTop_toBottomOf="@+id/smurfs"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:background="?android:attr/actionModeBackground"
        android:layout_height="100dp"
        android:fontFamily="serif"
        android:textAllCaps="false"
        android:textColor="@color/common_google_signin_btn_text_light_focused" />

    <Button
        android:id="@+id/last"
        android:text="Last"

        android:layout_width="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:background="?android:attr/actionModeBackground"
        android:contentDescription="wow"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/jokes"
        app:layout_constraintBaseline_toBaselineOf="@+id/music"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/jokes"
        android:layout_height="100dp"
        android:fontFamily="serif"
        android:textAllCaps="false"
        android:textColor="@color/common_google_signin_btn_text_light_focused" />

    <TextView
        android:text="Daniel Flores G."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.29000002"
        android:fontFamily="monospace"
        android:textSize="12sp"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <TextView
        android:text="87"
        android:layout_width="29dp"
        android:layout_height="23dp"
        android:id="@+id/textView8"
        android:typeface="monospace"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="18sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />


</android.support.constraint.ConstraintLayout>
