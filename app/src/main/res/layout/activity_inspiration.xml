<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_science"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dfguerrero.com.androidassignment1.InspirationActivity">

    <TextView
        android:text='"Inspiration"'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="24sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:fontFamily="serif"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="82dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:layout_width="54dp"
        android:layout_height="0dp"
        app:srcCompat="@android:drawable/ic_media_ff"
        android:id="@+id/prevQuote"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/quotesArray"
        android:layout_toEndOf="@+id/quotesArray"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/nextQuote"
        android:layout_marginEnd="64dp"
        app:layout_constraintRight_toRightOf="@+id/quotesArray"
        app:layout_constraintTop_toTopOf="@+id/nextQuote"
        android:layout_marginRight="64dp"
        app:layout_constraintVertical_bias="1.0"
        android:backgroundTint="@color/colorPrimaryDark" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:srcCompat="@android:drawable/ic_media_rew"
        android:id="@+id/nextQuote"
        android:layout_alignTop="@+id/prevQuote"
        android:layout_toLeftOf="@+id/textView4"
        android:layout_toStartOf="@+id/textView4"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="128dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginStart="64dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/quotesArray"
        android:layout_marginLeft="64dp" />

    <TextView
        android:layout_width="0dp"
        android:id="@+id/quotesArray"
        android:layout_above="@+id/nextQuote"
        android:layout_centerHorizontal="true"
        android:layout_height="144dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:fontFamily="serif"
        android:textSize="14sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />
</android.support.constraint.ConstraintLayout>
